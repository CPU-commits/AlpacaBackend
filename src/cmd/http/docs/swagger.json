                    "multipart/form-data"
                ],
                "tags": [
                    "tattoos"
                ],
                "summary": "Publicar nuevos tatuajes {admin}",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Imagen del tatuaje (jpg/png/webp)",
                        "name": "image",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
